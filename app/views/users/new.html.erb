<div class="wrapper">
    <!--=== Content Part ===-->
    <div class="container content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
               <!--  <form class="reg-page"> -->

          <%= form_for @user, :html => { :class => "reg-page" } do |f| %>
                  <% if @user.errors.any? %>
                          <div class="error_messages">
                            <h2>Form is invalid</h2>
                            <ul>
                              <% for message in @user.errors.full_messages %>
                                <li><%= message %></li>
                              <% end %>
                            </ul>
                          </div>
                        <% end %>

                    <div class="reg-header">
                        <h2>Register a new account</h2>
                        <p>Already Signed Up? Click<%= link_to "Sign In", userlogin_path,:class=>"color-green" %>
                         <!-- <a href="page_login.html" class="color-green"> --></a> to login your account.</p>                    
                    </div></br>
    
                
                    <label>Email Address <span class="color-red">*</span></label>
 
                    <%= f.text_field :email, :class =>"form-control margin-bottom-20", :value => @data %>
                  
                            <label>Password <span class="color-red">*</span></label>
                            <div class="field">
                            <%= f.password_field :password, :class =>"form-control margin-bottom-20" %>
              </div>
                        
                    
                    
                            <label>Confirm Password <span class="color-red">*</span></label>
                        <%= f.password_field :password_confirmation, :class =>"form-control margin-bottom-20" %>



                    <hr>
                            <span class="input-group-btn "><button type="submit" class="btn-u"><i>Register</i></button></span>

                          
                       
                  <% end %><!-- </form> -->
            </div>
        </div>
    </div><!--/container-->   
    <!--=== End Content Part ===-->
</div>