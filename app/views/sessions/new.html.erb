   <!--=== Content Part ===-->
<div class="wrapper">

    <div class="container content">   
     
       <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    
<!-- <form class="reg-page"> -->
          <%= form_tag sessions_path,  :class => "reg-page" do  %>
                
                    <div class="reg-header">    <!--=== added ===-->        
                        <h2>Login to your account</h2>
                    </div></br>

                    <div class="input-group margin-bottom-20">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <%#= label_tag :email %>
                        <%= text_field_tag :email, params[:email] , :placeholder => "Username",  :class => "form-control" %>
                        <!-- <input type="text" placeholder="Username" class="form-control"> -->
                    </div>

                    <div class="input-group margin-bottom-20">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <%#= label_tag :password %>
                            
                            <%= password_field_tag :password, nil, :class => "form-control" %>
                            <%#= password_field_tag :password, :class => "form-control" %>
                        <!-- <input type="password" placeholder="Password" class="form-control"> -->
                    </div>                    

                    <div class="row"><!--=== added ===--> 
                        <div class="col-md-6">
                  <label> <!--class="checkbox"><input type="checkbox"> --> 
                  <%= check_box_tag :remember_me, 1, params[:remember_me],  :class => "checkbox" %> Stay signed in</label>          
                       
                        </div>


                        <div class="col-md-6">
                          <%= submit_tag "Log in",  :class => "btn-u pull-right" %>
                            <!-- <button class="btn-u pull-right" type="submit">Login</button>  -->                       
                        </div>
                    </div>

                    <hr>
                  <%#= link_to 'Login with Twitter', auth_at_provider_path(:provider => :twitter) %>  
                  <%#= link_to 'Login with Facebook', auth_at_provider_path(:provider => :facebook) %>
                    <h4>Forget your Password ?</h4>
                    <p style="padding-bottom:12%;">no worries, <%= link_to 'click here', new_password_reset_path ,  :class => "color-green"%> to reset your password.</p>

                <% end %>           
                <!-- </form>  -->
            </div>
        </div><!--/row-->
    </div><!--/container-->   
    <!--=== End Content Part ===-->
</div>