    <% end %>-->

    <!-- <h4><%#= t('add', :scope => 'refinery.blog.posts.show.comments') %></h4> -->
    
  <% end %>
</aside>
<!-- Comment Form -->
                <div class="post-comment">
                  <h3>Leave a Comment</h3>
                    <%= form_for [refinery, :blog, @comment] do |f| %>
      <%= render "/refinery/admin/error_messages",
                 :object => f.object,
                 :include_object_name => true %>
                        
                        <div class="row margin-bottom-20">
                            <div class="col-md-7 col-md-offset-0">
                                <%= f.label :name %>
                              <%= f.text_field :name,:required => 'required',:class=>'form-control' %>
                            </div>                
                        </div>
                        
                       <!--  <label>Email <span class="color-red">*</span></label> -->
                        <div class="row margin-bottom-20">
                            <div class="col-md-7 col-md-offset-0">
                                <%= f.label :email %>
                          <%= f.email_field :email,:required => 'required',:class=>'form-control' %>
                            </div>                
                        </div>
                        
                        <!-- <label>Message</label> -->
                        <div class="row margin-bottom-20">
                            <div class="col-md-11 col-md-offset-0">
                                <%= f.label :message %>
                                <%= f.text_area :message, :rows => 6,:required => 'required',:class=>'form-control' %>
                            </div>                
                        </div>
                        
                        <p><button class="btn-u" type="submit">Send Message</button></p>
                    <% end %>
                 
                </div>


