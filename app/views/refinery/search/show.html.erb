  <h3>
  <%= t('.no_results_for', :what => params[:query]) %><i class="color-gray fa fa-exclamation-triangle"></i>
</h3>
  <% else %>
    <ul id="search_results">
      <h1><i class="color-gray fa fa-filter"></i><a>Search Result</a></h1>
      <% @results.each do |result| %>

        <li style="list-style-type:none; border-bottom:1px solid #ccc; padding-bottom:10px;">
          <span class='result_type'>
           
            <p><%= result_type result %></p>
            
          </span>
          <%= link_to result_title(result).html_safe, result_url(result) %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>

